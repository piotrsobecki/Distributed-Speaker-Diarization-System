<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
		http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.1.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

    <import resource="classifier-context.xml"/>
    <import resource="processer-context.xml"/>
    <import resource="splitter-context.xml"/>
    <import resource="converter-context.xml"/>

    <context:component-scan base-package="iopiotrsukiennik" />
    <mvc:annotation-driven/>
    <aop:aspectj-autoproxy />

    <util:properties id="concurrencyProperties" location="/WEB-INF/properties/concurrency.properties" />


    <bean id="balancerService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="serviceInterface" value="iopiotrsukiennik.whowhen.backend.api.inner.balancer.BalancerService"/>
        <property name="service" ref="balancerServiceImpl"/>
    </bean>

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                /balancer.service=balancerService
            </value>
        </property>
    </bean>




</beans>